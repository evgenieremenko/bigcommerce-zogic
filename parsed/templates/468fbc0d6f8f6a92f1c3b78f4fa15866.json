{"components/halothemes/side-all-categories":"\r\n<div class=\"accordion-block sidebarBlock sidebarEffects-window\"  id=\"sideAllCategories\">\r\n    <div\r\n        class=\"accordion-navigation toggleLink \"\r\n        role=\"button\"\r\n        data-collapsible=\"#facetedSearch-content--Categories\">\r\n        <h5 class=\"accordion-title side-module-heading\">\r\n            <span>Categories</span>\r\n        </h5>\r\n\r\n        <div class=\"accordion-navigation-actions\">\r\n            {{#if selected}}\r\n                <a href=\"{{ remove_url }}\" class=\"facetedSearch-clearLink\" data-faceted-search-facet>{{lang 'search.faceted.clear'}}</a>\r\n            {{/if}}\r\n            <i class=\"fa fa-chevron-up accordion-indicator toggleLink-text toggleLink-text--off\">\r\n            </i>\r\n            <i class=\"fa fa-chevron-down accordion-indicator toggleLink-text toggleLink-text--on\">\r\n            </i>\r\n        </div>\r\n    </div>\r\n\r\n    <div id=\"facetedSearch-content--Categories\" class=\"accordion-content \">\r\n         {{#if categories}}\r\n            <ul class=\"all-categories-list\">\r\n                {{#each categories}}\r\n                <li class=\"navPages-item\">\r\n                    {{#if children}}\r\n                    <i class=\"fa fa-chevron-up\"></i>\r\n                    <a class=\"navPages-action has-subMenu\" href=\"{{url}}\">\r\n                        {{name}}\r\n                    </a>\r\n                    <ul class=\"dropdown-category-list\" id=\"navPages-level-2\">\r\n                        {{#each children}}\r\n                            <li class=\"navPage-subMenu-item\">\r\n                                {{#if children}}\r\n                                    <i class=\"fa fa-chevron-up\"></i>\r\n                                    <a class=\"navPage-subMenu-action navPages-action has-subMenu\" href=\"{{url}}\">\r\n                                        {{name}}\r\n                                    </a>\r\n                                    <ul class=\"dropdown-category-list\" id=\"navPages-level-3\">\r\n                                        {{#each children}}\r\n                                        <li class=\"navPage-childList-item\">\r\n                                            <a class=\"navPage-childList-action navPages-action\" href=\"{{url}}\">{{name}}</a>\r\n                                        </li>\r\n                                        {{/each}}\r\n                                    </ul>\r\n                                {{else}}\r\n                                    <a class=\"navPage-subMenu-action navPages-action\" href=\"{{url}}\">{{name}}</a>\r\n                                {{/if}}\r\n                            </li>\r\n                        {{/each}}\r\n                    </ul>\r\n                    {{else}}\r\n                    <a class=\"navPages-action\" href=\"{{url}}\">{{name}}</a>\r\n                    {{/if}}\r\n                </li>\r\n                {{/each}}\r\n            </ul>\r\n            {{/if}}\r\n    </div>\r\n</div>\r\n"}
