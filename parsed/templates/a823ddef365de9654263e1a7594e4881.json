{"components/halothemes/halo-dropdown-login":"<div class=\"customer-dropdown-login hidden-xs hidden-sm\">\r\n    <div class=\"customer-login\">\r\n        {{#if customer}}\r\n        <a href=\"{{urls.auth.logout}}\"><span>{{lang 'common.logout'}}</span></a>\r\n        {{else}}\r\n        <a href=\"javascript:void(0);\" class=\"toggle-dropdown-login\">{{lang 'common.login'}}</a>\r\n        <div id=\"dropdown-login\">\r\n            <h3>Customer Login</h3>\r\n            <div class=\"pad-popup\">\r\n                <form class=\"login-popup\" id=\"loginForm\" action=\"{{settings.secure_base_url}}/login.php?action=check_login\" method=\"post\" name=\"mainLoginForm\">\r\n                    <fieldset class=\"form-fieldset\">\r\n                       <div class=\"form-field\">\r\n                            <label class=\"form-label\" for=\"login_email\">{{lang 'login.field_email'}}</label>\r\n                            <input class=\"form-input\" name=\"login_email\" id=\"login_email\" type=\"email\">\r\n                        </div>\r\n                        <div class=\"form-field\">\r\n                            <label class=\"form-label\" for=\"login_pass\">{{lang 'login.field_password'}}</label>\r\n                            <input class=\"form-input\" id=\"login_pass\" type=\"password\" name=\"login_pass\">\r\n                        </div>\r\n                        <div class=\"form-actions\">\r\n                            <input type=\"submit\" class=\"btn btn-alt btn-lg\" value=\"{{lang 'common.login'}}\">\r\n                            <a class=\"forgot-password\" href=\"{{urls.auth.forgot_password}}\">{{lang 'login.forgot_password' }}</a>\r\n                        </div>\r\n                    </fieldset>\r\n                </form>\r\n                <div class=\"separated-form\">\r\n                    <a href=\"{{urls.auth.create_account}}\" class=\"btn btn-primary\"><span>{{lang 'login.new_customer.create_a_new_account'}}</span></a>\r\n                </div>\r\n            </div>\r\n        </div>\r\n        {{/if}}\r\n    </div>\r\n</div>\r\n"}
