{"components/halothemes/halo-popup-login":"{{#if customer}}\r\n{{else}}\r\n<!-- BEGIN SIGN IN POPUP -->\r\n<div id=\"halo-popup-login\" class=\"modal\" data-reveal>\r\n    <a href=\"#\" class=\"modal-close\" aria-label=\"{{lang 'common.close'}}\" role=\"button\">\r\n        <span aria-hidden=\"true\">&#215;</span>\r\n    </a>\r\n    <div class=\"modal-body\">\r\n        <div class=\"text-left\">\r\n            <h3>{{lang 'common.login'}}</h3>\r\n            <form class=\"login-popup\" id=\"loginForm\" action=\"{{settings.secure_base_url}}/login.php?action=check_login\" method=\"post\" name=\"mainLoginForm\">\r\n               <fieldset class=\"form-fieldset\">\r\n                    <div class=\"form-field\">\r\n                        <input class=\"form-input\" name=\"login_email\" id=\"login_email\" type=\"email\" placeholder=\"Email address\">\r\n                    </div>\r\n                    <div class=\"form-field\">\r\n                        <input class=\"form-input\" id=\"login_pass\" type=\"password\" name=\"login_pass\" placeholder=\"Password\">\r\n                    </div>\r\n                    <p style=\"text-align: center;display: none;\" id=\"popup-loading\"><img src=\"{{cdn '/assets/img/vendor/jstree/throbber.gif'}}\"></p>\r\n                    <div class=\"form-actions\">\r\n                        <input type=\"submit\" class=\"btn btn-primary\" value=\"{{lang 'login.submit_value' }}\">\r\n                        <a class=\"forgot-password\" href=\"{{urls.auth.forgot_password}}\">{{lang 'login.forgot_password' }}</a>\r\n                    </div>\r\n                </fieldset>\r\n            </form>\r\n            <div class=\"separated-form\">\r\n                <span>OR</span>\r\n                <a href=\"{{urls.auth.create_account}}\" class=\"btn btn-oranges\"><span>Create A New Account</span></a>\r\n            </div>\r\n        </div>\r\n    </div>\r\n</div>\r\n<!-- END SIGN IN POPUP -->\r\n\r\n<script>\r\n    window.HaloPopupLogin();\r\n</script>\r\n{{/if}}\r\n"}
